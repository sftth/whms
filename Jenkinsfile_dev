pipeline {
	agent any

	stages {
		stage("Git Checkout") {
            steps {
                echo '========================1. Git Checkout ====================='
                checkout scm
            }
		} // Git Checkout
        stage('mvn Build') {
            steps {
                echo '========================2. Maven Build ====================='
                sh " chmod +x ./mvnw"
                sh "./mvnw clean package -Pdev"
            }
        } // Maven Build
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonarqube') {
                    sh './mvnw sonar:sonar'
                }
            }
        }
        stage('SonarQube Quality Gate') {
            steps {
                timeout(time:30, unit:'MINUTES') {
                    waitForQualityGate abortPipeline:true
                }
            }
        }
	}

	post{
	    always{
	        junit '**/target/surefire-reports/TEST-*.xml'
	    }
	}
}